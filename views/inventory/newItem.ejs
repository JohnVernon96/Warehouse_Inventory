<% include ../partials/header %>

  <h2>Add A New Item To The DataBase</h2>

  <form action="/inventory" method="post">
    <div class="form-group">
      <label for="descriptionInput">Description</label>
      <input type="search" class="form-control" id="descriptionInput" name="item[description]" required aria-describedby="emailHelp" placeholder="Enter description" maxlength="100">
      <small id="emailHelp" class="form-text text-muted">Describe the item(i.e 2x4 or microwave)</small>
    </div>
    <div class="form-group">
      <label for="categoryInput">Category</label>
      <input type="search" class="form-control" id="categoryInput" name="item[category]" required placeholder="furniture" maxlength="25">
    </div>
    <div class="form-group">
      <label for="quantityInput">Quantity</label>
      <input type="number" class="form-control" id="quantityInput" name="item[quantity]" required placeholder="6">
    </div>
    <div class="form-group">
      <label for="storageLocationInput">Storage Location</label>
      <input type="text" class="form-control" id="storageLocationInput" name="item[storage_location]" required placeholder="0000" maxlength="4">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>




<% include ../partials/footer %>
