<% include ./partials/header %>

<!-- Login Modal -->
<div class="modal fade right" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-full-height modal-right" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Log In</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form id="loginModalForm" action="/login" method="POST">
                        <div class="row">
                            <div class="form-group">
                                <label for="usernameInput">Username</label>
                                <input type="email" class="form-control col-md-12" id="usernameInput" placeholder="Enter username" name="username" aria-describedby="usernameHelp"/>
                                <small id="usernameHelp" class="form-text text-muted">Your username may be your email</small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="passwordInput">Password</label>
                                <input type="password" class="form-control col-md-12" id="passwordInput" placeholder="Enter password" name="password"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn btn-primary btn-success" type="submit" name="submit" form="loginModalForm">Submit</button>
            </div>
        </div>
    </div>
</div>

<!-- Signup Modal -->
<div class="modal fade right" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-full-height modal-right" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signupModalLabel">Sign Up</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <form id="signupModalForm" action="/login" method="POST">
                        <div class="row">
                            <div class="form-group">
                                <label for="firstInput">First Name</label>
                                <input type="text" class="form-control col-md-12" id="firstInput" placeholder="John" name="firstName"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="lastInput">Last Name</label>
                                <input type="text" class="form-control col-md-12" id="lastInput" placeholder="Doe" name="lastName"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="emailInput">Email</label>
                                <input type="email" class="form-control col-md-12" id="emailInput" placeholder="JohnDoe@asuh.com" name="username"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <label for="passwordInput">Password</label>
                                <input type="password" class="form-control col-md-12" id="passwordInput" placeholder="suh" name="password"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button class="btn btn-primary btn-success" type="submit" name="submit" form="signupModalForm">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron">

    <h1 class="display-4">Welcome to idkDB</h1>

