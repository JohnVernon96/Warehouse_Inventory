<% include ../partials/header %>

  <link rel="stylesheet" href="/inventory.css">

    <h1>Account Information for: <%= currentUser.username %></h1>

    <% if(info) { %>

    <div class="container">
        <div class="row jumbotron text-white">
            <div class="inv-container table table-hover table-responsive-lg">
                <table>
                  <!-- Header row -->
                  <tr>
                    <th>ID</th>
                    <th>User Name</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Access Level</th>
                  </tr>
                  <% for(var i = 0; i < info.rowCount; i++) { %>
                      <tr>
                        <td><%= info.rows[i].id %></td>
                        <td><%= info.rows[i].email %></td>
                        <td><%= info.rows[i].firstname %></td>
                        <td><%= info.rows[i].lastname %></td>
                        <td><%= info.rows[i].access %></td>
                      </tr>
                  <% } %>
                </table>
            </div>
        </div>
    </div>

    <% } %>

<% include ../partials/footer %>
